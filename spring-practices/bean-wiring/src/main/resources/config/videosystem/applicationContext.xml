<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<!-- 01. 빈설정: 초간단 -->
	<bean class="videosystem.Avengers" />

	<!-- 02. 빈설정: id 부여하기 -->
	<bean id="ironMan" class="videosystem.IronMan" />

	<!-- 03. 빈설정: 생성자: 리터럴 사용1 -->
	<bean id="avengersInfinityWar" class="videosystem.BlankDisc">
		<constructor-arg name="title"
			value="Avengers Infinity War" />
		<constructor-arg name="studio" value="Marvel" />
	</bean>

	<!-- 04. 빈설정: 생성자: 리터럴 사용2 -->
	<bean id="avengersEndgame" class="videosystem.BlankDisc"
		c:title="Avengers Endgame" c:studio="Marvel" />

	<!-- 05. 빈설정: 생성자: 리터럴 사용3 -->
	<bean id="avengersAgeOfUltron" class="videosystem.BlankDisc"
		c:_1="Marvel" c:_0="Avengers Age of Ultron" />

	<!-- 06. 빈설정: 생성자: null argument -->
	<bean id="avengersCaptainAmerica" class="videosystem.BlankDisc">
		<constructor-arg name="title"
			value="Avengers Captain America" />
		<constructor-arg name="studio" value="Marvel" />
		<constructor-arg name="actors">
			<null />
		</constructor-arg>
	</bean>

	<!-- 07. 빈설정: 생성자: collection argument -->
	<bean id="avengersDirectorEdition" class="videosystem.BlankDisc">
		<constructor-arg name="title"
			value="Avengers Director Edition" />
		<constructor-arg name="studio" value="Marvel" />
		<constructor-arg name="actors">
			<list>
				<value>Robert Downey Jr.</value>
				<value>Chris Evans</value>
			</list>
		</constructor-arg>
	</bean>

	<!-- 08. 빈설정: 생성자: wiring collection -->
	<bean id="avengersTriplePack" class="videosystem.DVDPack">
		<constructor-arg name="title"
			value="Avengers Triple Pack" />
		<constructor-arg name="dvds">
			<list>
				<ref bean="avengersInfinityWar" />
				<ref bean="avengersAgeOfUltron" />
				<ref bean="avengersEndgame" />
			</list>
		</constructor-arg>
	</bean>

	<!-- 09. 빈설정: 프로퍼티 사용1 -->
	<bean id="avengersExpansionEdition1" class="videosystem.BlankDisc">
		<property name="title" value="Avengers Expansion Edition1" />
		<property name="studio" value="Marvel" />
	</bean>

	<!-- 10. 빈설정: 프로퍼티 사용2 -->
	<bean id="avengersExpansionEdition2" class="videosystem.BlankDisc"
		p:title="Avengers Expansion Edition2" p:studio="Marvel">
		<property name="actors">
			<list>
				<value>Robert Downey Jr.</value>
				<value>Chris Evans</value>
			</list>
		</property>
	</bean>

	<!-- 11. 빈설정: 프로퍼티 사용3 -->
	<util:list id="actorList">
		<value>Robert Downey Jr.</value>
		<value>Chris Evans</value>
	</util:list>
	<bean id="avengersExpansionEdition3" class="videosystem.BlankDisc"
		p:title="Avengers Expansion Edition3" p:studio="Marvel"
		p:actors-ref="actorList">
	</bean>

	<!-- 12. 빈주입: 생성자 주입1 -->
	<bean id="dvdPlayer1" class="videosystem.DVDPlayer">
		<constructor-arg ref="ironMan" />
	</bean>

	<!-- 13. 빈주입: 생성자 주입2: c-namespace의 argument name을 사용하는 방법, Spring 3.x 지원 -->
	<bean id="dvdPlayer2" class="videosystem.DVDPlayer"
		c:dvd-ref="ironMan" />

	<!-- 14. 빈주입: 생성자 주입3: c-namespace의 argument index을 사용하는 방법, Spring 3.x 
		지원 -->
	<bean id="dvdPlayer3" class="videosystem.DVDPlayer"
		c:_0-ref="ironMan" />

	<!-- 15. 빈주입: 프로퍼티 주입1 -->
	<bean id="dvdPlayer4" class="videosystem.DVDPlayer">
		<property name="dvd" ref="ironMan" />
	</bean>

	<!-- 16. 빈주입: 프로퍼티 주입2: p-namespace -->
	<bean id="dvdPlayer5" class="videosystem.DVDPlayer"
		p:dvd-ref="ironMan" />
</beans>